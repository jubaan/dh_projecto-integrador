<form class="form" method="POST" action="/users/">
  <div class="form-input-group">
    <ion-icon class="form-icon" name="mail-sharp"></ion-icon>
    <input
      class="form-input"
      type="email"
      name="email"
      id="email"
      placeholder="john.doe@email.com"
    />
  </div>
  <div class="form-input-group">
    <ion-icon class="form-icon" name="keypad-sharp"></ion-icon>
    <input
      class="form-input"
      type="password"
      name="userPassword"
      id="userPassword"
      placeholder="********"
    />
    <ion-icon class="form-icon-hidden" name="eye-sharp"></ion-icon>
    <ion-icon class="form-icon-right" name="eye-off-sharp"></ion-icon>
  </div>
  <button class="form-button" type="submit">
    <span>Log In</span>
  </button>
  <div class="form-input-group">
    <a href="/users/signup" class="form-link">
      <span>sign up</span>
    </a>
  </div>
</form>
